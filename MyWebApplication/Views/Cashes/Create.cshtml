@model MyWebApplication.Models.Cash

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Cash</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyCode" class="control-label">Currency Code</label>
                <select asp-for="CurrencyCode" class="form-control" asp-items="Html.GetEnumSelectList<CurrencyCode>()" class="control-label">
                    <option selected="selected" value="">-- Select Currency Code Option --</option>
                </select>

                <span asp-validation-for="CurrencyCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment" class="control-label"></label>
                <select asp-for="Payment" class="form-control" asp-items="Html.GetEnumSelectList<Payment>()" class="control-label">
                    <option selected="selected" value="">-- Select Payment Option --</option>
                </select>

               
            </div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label"></label>
                <input asp-for="ClientName" class="form-control" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Branch" class="control-label"></label>
                <select asp-for="BranchID" class="form-control" asp-items="ViewBag.BranchID">
                <option value="">-- Select Branch--</option>
                </select>
                <span asp-validation-for="BranchID" class="text-danger" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
